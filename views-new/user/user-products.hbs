
    <style>
        .box {
            width: 46%;
            height: 22rem;
            margin: 2%;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 5px;
        }

        .order {
            width: 100%;
            height: 4rem;
            margin-top: 1rem;
            font-size: medium;
            font-weight: 400;
            color: #ff7800;
            border-radius: 0.7rem;
        }

        .order:hover {
            background-color: #ff7800;
            color: #fff;
            border-radius: 0.7rem;
        }

        .carousel-item {
            height: 10rem;
        }

        .carousel img{
            object-fit: cover;
            width: 100%;
            height: 100%;
        }
    </style>


